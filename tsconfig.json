{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@aplicacao/*": [
        "aplicacao/*"
      ],
      "@componentes/*": [
        "componentes/*"
      ],
      "@funcionalidades/*": [
        "funcionalidades/*"
      ],
      "@dominio/*": [
        "dominio/*"
      ],
      "@infraestrutura/*": [
        "infraestrutura/*"
      ],
      "@estilos/*": [
        "estilos/*"
      ],
      "@utilitarios/*": [
        "utilitarios/*"
      ],
      "@recursos/*": [
        "recursos/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}